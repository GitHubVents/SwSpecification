<Window x:Class="SwSpecification.FixAllConfig"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SwSpecification"
        mc:Ignorable="d"
        Title="FixAllConfig" Height="300" Width="500" Topmost="True">
    
    <Grid ShowGridLines="True" Name="MainGrid">
        <DataGrid x:Name="dataGrid" VerticalAlignment="Top" Height="227" CanUserAddRows="False" Width="auto" AutoGenerateColumns="False"
                  CanUserResizeRows="False" PreviewMouseLeftButtonUp="dataGrid_PreviewMouseLeftButtonUp_1"/>
        <Button x:Name="SaveChangesOnGrid"  Content="Применить" HorizontalAlignment="Left" Margin="24,239,0,0" VerticalAlignment="Top" Width="139" Click="SaveChangesOnGrid_Click"/>
        <Button x:Name="UndoChanges" Content="Применить и закрыть" HorizontalAlignment="Left" Margin="174,239,0,0" VerticalAlignment="Top" Width="139" Click="UndoChanges_Click"/>
        <Button x:Name="Close" Content="Закрыть" HorizontalAlignment="Left" Margin="333,239,0,0"  VerticalAlignment="Top" Width="139" Click="Close_Click"/>

    </Grid>
</Window>
