<Window x:Class="SwSpecification.UcTableToDrwDoc"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Таблица свойств" Height="552" Width="696" WindowStartupLocation="CenterScreen" Topmost="True">
    <Grid Name="GridHome" Loaded="GridHome_Loaded">


        <Button Name="BtnAddTable" Margin="0,0,13,10" Content="Вставить таблицу" 
                VerticalAlignment="Bottom" Click="BtnAddTable_Click" Height="22"
                HorizontalAlignment="Right" Width="120">
        </Button>

        <DataGrid Name="DgLoadTable" AutoGenerateColumns="False" CanUserAddRows="False"
                  CanUserDeleteRows="false" IsReadOnly="True" Margin="10,39,13,43"/>

        <ComboBox Name="CboTableName" HorizontalAlignment="Left" Margin="96,10,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="CboTableName_SelectionChanged"/>

        <Button Name="AddNewTable" Content="Новая таблица" Margin="0,10,13,0" VerticalAlignment="Top" Click="AddNewTable_Click" HorizontalAlignment="Right" Width="120"/>

        <Button Name="BtnDeleteTable" Content="Удалить таблицу" Margin="0,10,138,0"
                VerticalAlignment="Top" Click="BtnDeleteTable_Click" HorizontalAlignment="Right" Width="113"/>

        <Label Name="LblTest" Content="Имя таблицы:" HorizontalAlignment="Left" Margin="10,8,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>